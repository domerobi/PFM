<Window x:Class="PFM.Views.ModifyTransactionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PFM.Views"
        mc:Ignorable="d"
        Title="Tranzakció módosítása" Height="281.173" Width="321.186" WindowStartupLocation="CenterScreen" UseLayoutRounding="False" ResizeMode="NoResize" ShowInTaskbar="False" FontSize="16">

    <StackPanel Orientation="Vertical">
        <local:TransactionControl Margin="15,0" Width="Auto" />
        <Grid Margin="15,10,15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="Módosítás" 
                    Command="{Binding ModifyCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    Margin="0,0,5,0" Width="110"/>
            <Button Grid.Column="1"
                    Content="Mégse" 
                    Command="{Binding CloseCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    Margin="5,0,0,0" Width="110"/>
        </Grid>
    </StackPanel>
</Window>
